@model TrainDestination
@{
    Layout = "_Layout";
}

<div class="createPlace">
    <form class="createForm form-floating" asp-controller="TrainDestination" asp-action="Edit" method="post">
            <a asp-controller="TrainDestination" asp-action="Index" class="position-absolute top-0 start-100 translate-middle"><i class="bi bi-x-circle fs-2"></i></a>
        
        <div class="row g-2 p-3">
          <div class="col-md">
            <div class="form-floating">
                <input hidden asp-for="Id" class="form-control" id="floatingInputGrid" placeholder="Id" value="@Model?.Id"/>
                <select required asp-for="TrainId" asp-items="ViewBag.Trains" class="form-select" id="floatingSelectGrid" aria-label="Floating label select example" value="@Model?.TrainId"></select>              
                <label for="floatingSelectGrid">Поезд</label>
            </div>
          </div>
          <div class="col-md">
            <div class="form-floating">
                <select required asp-for="DestinationId" asp-items="ViewBag.Destinations" class="form-select" id="floatingSelectGrid" aria-label="Floating label select example" value="@Model?.DestinationId"></select>              
                <label for="floatingSelectGrid">Места назначения</label>
            </div>
          </div>
        </div>
        <div class="row g-2 p-3">
          <div class="col-md">
            <div class="form-floating">
                <div class="form-floating">
                  <input asp-for="DepartureTime" type="datetime-local" class="form-control" id="floatingInputGrid" placeholder="Дата и время отправления" value="@Model?.DepartureTime?.ToString("s")">
                  @Html.ValidationMessageFor(model => model.DepartureTime, null, new { style = "color:red" })
                  <label for="floatingInputGrid">Введите дату и время отправления</label>
                </div>
              </div> 
           </div>
           <div class="col-md">
            <div class="form-floating">
                <div class="form-floating">
                  <input asp-for="ArrivalTime" type="datetime-local" class="form-control" id="floatingInputGrid" placeholder="Дата и время прибытия" value="@Model?.ArrivalTime?.ToString("s")">
                  @Html.ValidationMessageFor(model => model.ArrivalTime, null, new { style = "color:red" })
                  <label for="floatingInputGrid">Введите дату и время прибытия</label>
                </div>
              </div> 
           </div>
         </div>
         

