@model Worker
@{
    Layout = "_Layout";
}

<div class="createPlace">
    <form class="createForm form-floating" asp-controller="Worker" asp-action="Edit" method="post">
        <a asp-controller="Worker" asp-action="Index" class="position-absolute top-0 start-100 translate-middle"><i class="bi bi-x-circle fs-2"></i></a>
        <div class="row g-2 p-3">
          <div class="col-md">
            <div class="form-floating">      
              <input hidden required asp-for="Id" type="text" placeholder="Id" value="@Model?.Id">
                
              <input required asp-for="FirstName" type="text" class="form-control" id="floatingInputGrid" placeholder="Иван" value="@Model?.FirstName">
              @Html.ValidationMessageFor(model => model.FirstName, null, new { style = "color:red" })
              <label for="floatingInputGrid">Введите имя</label>
            </div>
          </div>
          <div class="col-md">
            <div class="form-floating">
              <input required asp-for="LastName" type="text" class="form-control" id="floatingInputGrid" placeholder="Иванов" value="@Model?.LastName">
              @Html.ValidationMessageFor(model => model.LastName, null, new { style = "color:red" })
              <label for="floatingInputGrid">Введите фамилию</label>
            </div>
          </div>          
        </div>

        <div class="row g-2 p-3">
          <div class="col-md">
            <div class="form-floating">
              <input required asp-for="PhoneNumber" type="tel" pattern="\d+" class="form-control" id="floatingInputGrid" placeholder="375291234567" value="@Model?.PhoneNumber">
              @Html.ValidationMessageFor(model => model.FirstName, null, new { style = "color:red" })
              <label for="floatingInputGrid">Введите номер телефона</label>
            </div>
          </div>

          <div class="col-md">
            <div class="form-floating">
              <input asp-for="Password" type="text" class="form-control" id="floatingInputGrid" placeholder="Пароль" value="@Model?.Password">
              @Html.ValidationMessageFor(model => model.Password, null, new { style = "color:red" })
              <label for="floatingInputGrid">Введите пароль(0000)</label>
            </div>
          </div>          
        </div>


         <div class="row g-2 p-3">
          <div class="col-md">
            <div class="form-floating">
                <select required asp-for="AccessRightId" asp-items="ViewBag.AccessRights" class="form-select" id="floatingSelectGrid" aria-label="Floating label select example" value="@Model?.AccessRightId"></select>              
                <label for="floatingSelectGrid">Группа пользователей</label>
            </div>
          </div>
        </div>      
        
        
    <div class="createButton">
        <button class="btn btn-success" type="submit">
                Сохранить
            </button>
            <button class="btn btn-primary" type="reset">
                Очистить
        </button>
    </div>
        
    </form>
</div>


